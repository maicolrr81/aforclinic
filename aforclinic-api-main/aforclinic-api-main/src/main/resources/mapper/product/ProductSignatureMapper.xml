<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xenialsoft.api.core.product.mapper.ProductSignatureMapper">

    <resultMap id="productSignature" type="ProductSignature">
        <id     property="productId"    column="product_id" />
        <association property="product" javaType="Product">
            <id     property="id"       column="product_id" />
            <result property="name"     column="name" />
        </association>
    </resultMap>
    
    <select id="selectList" resultMap="productSignature" >
        select a.product_id
            , b.name    
        from product_signature a
            inner join product b 
                on (a.product_id = b.id)
        where b.status is null or b.status != 'DELETED'
    </select>
   
    <insert id="insert">
        insert into product_signature (
            product_id
        ) values (
            #{id}
        )
    </insert>

    <delete id="delete">
        delete from product_signature
    </delete>
    
</mapper>